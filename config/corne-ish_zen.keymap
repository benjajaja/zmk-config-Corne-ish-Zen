#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        macros {
            xmonad: xmonad {
                label = "Xmonad Layer";
                compatible = "zmk,behavior-macro";
                wait-ms = <0>;
                #binding-cells = <0>;
                bindings
                    = <&macro_press &mo 1 &kp LALT>
                    , <&macro_pause_for_release>
                    , <&macro_release &mo 1 &kp LALT>;
            };
            email: email {
                label = "Type email";
                compatible = "zmk,behavior-macro";
                wait-ms = <40>;
                tap-ms = <40>;
                #binding-cells = <0>;
                bindings
                    = <&kp S &kp T &kp N3 &kp L &kp S>
                    , <&kp AT>
                    , <&kp G &kp M &kp A &kp I &kp L &kp DOT &kp C &kp O &kp M>;
            };
        };
        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "NORMAL";
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | ESC  |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// |  -   |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  |  =   |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp ESC &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &mt LCTL MINUS &mt LALT Z &mt LGUI X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp EQUAL
                  &xmonad &kp LSHFT &kp SPACE   &lt 2 RET &kp RSHFT &mt RALT F20
                        >;
                };
                lower_layer {
                        label = "XMONAD";
                        bindings = <
   &kp Q   &kp N1  &kp N2  &kp N3  &kp N4  &kp N5    &kp N6  &kp N7  &kp N8  &kp N9  &kp P  &trans
   &trans  &kp Q   &kp W   &kp E   &kp R   &kp T     &trans  &trans  &trans  &trans &kp C_BRI_DN &kp C_BRI_UP
   &kp LSHFT &trans &trans &trans  &kp F20 &trans &trans  &trans  &trans  &trans &kp C_VOL_DN &kp C_VOL_UP
                           &trans  &trans  &trans    &kp RET &trans  &trans
                        >;
                };

                raise_layer {
                        label = "RAISED";
                        bindings = <
   &kp GRAVE &kp N1   &kp N2    &kp N3    &kp N4   &kp N5      &kp N6   &kp N7   &kp N8   &kp N9    &kp N0   &kp BSLH
   &kp TILDE &kp LBRC &kp PG_UP &kp PG_DN &kp END  &kp HOME    &kp LEFT &kp DOWN &kp UP   &kp RIGHT &kp RBRC &kp PIPE
   &kp LBKT  &kp EXCL &kp AT    &kp HASH  &kp DLLR &kp PRCNT  &kp CARET &kp AMPS &kp KP_MULTIPLY &kp LPAR &kp RPAR &kp RBKT
                                &trans    &trans   &trans      &trans   &trans   &trans
                        >;
                };
        };
};
